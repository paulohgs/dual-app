<title><%= title %> </title>
<%- include('../views/partials/head.ejs'); %>

<body class="background-dark">
    <main>
        <div class="container d-flex h-100">
            <div class="row justify-content-center align-self-center">
                <div class="col-lg-5" id="coluna1">
                    <form id="formsLogin" method="POST" action="entrar">
                        <div class="row mb-3">
                            <img src="images/dual-logo.svg" class="d-block" alt="logo da aplicação Dual">
                        </div>
                        <div class="row mb-3">
                            <input id="inputUser" class="form-control" type="user" name="user"
                                placeholder="Usuário" required>
                        </div>
                        <div class="row mb-3">
                            <input type="password" class="form-control" name="password" placeholder="Senha">
                        </div>
                        <div class="row mb-3">
                            <a href="redefinicao-de-senha" class="link-light textDual">Esqueceu a senha?</a>
                        </div>
                        <div class="row mb-3">
                            <button class="btn btn-light dualButton" type="submit" form="formsLogin">Entrar</button>
                        </div>
                        <p class="textDual">É a primeira vez?</p>
                        <a href="cadastro" class="link-light textDual">Cadastre-se</a>
                    </form>

                </div>
                <div class="col-lg-7">
                    <!-- Carousel -->
                    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                                class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                                aria-label="Slide 2"></button>
                            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                                aria-label="Slide 3"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="images/nectar.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="images/cultura_britanica_gr.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="images/nectar.png" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    <!-- Carousel -->
                </div>
            </div>
        </div>
    </main>
    <footer>
        <div class="container d-flex justify-content-center">
            <div class="text-center">
                <div class="card-body">
                    <h5 class="card-title">Projeto desenvolvido pela equipe JPG³</h5>
                    <p class="card-text">Desenvolvido com o auxílio do framework <a id="pattyFW"
                            href="https://github.com/wwagner33/pattyfw" target="_blank">PattyFW</a> </p>
                    <a href="https://github.com/paulohgs/dual-app" target="_blank" class="btn btn-light dualButton">Link
                        para o projeto no Github</a>
                </div>
                <div class="card-footer text-muted">
                    <%- include('../views/partials/footer.ejs'); %>
                </div>

            </div>
        </div>
    </footer>

    <%- include('../views/partials/bootstrap_js.ejs'); %>
</body>

</html>
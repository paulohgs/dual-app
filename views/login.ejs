<title><%= title %> </title>
<%- include('../views/partials/head.ejs'); %>

<body class="background-dark">
    <div id="containerLogin" class="container position-relative top-50 start-50 translate-middle">
        <div class="row">
            <div class="col-lg-4" id="coluna1">
                <form id="formsLogin" method="POST" action="entrar">
                    <img src="../public/images/DUAL-logo1.png" class="img-fluid" alt="logo da aplicação Dual">
                    <input id="inputUser" class="form-control" type="text" name="inputUsername" placeholder="Usuário"
                        required>
                    <input type="password" class="form-control" name="inputPassword" placeholder="Senha">
                    <a href="redefinePassword" class="link-light">Esqueceu a senha?</a>
                </form>
                <button class="btn btn-light dualButton" type="submit" form="formsLogin">Entrar</button>
                <p>É a primeira vez?</p>
                <a href="cadastro" class="link-light">Cadastre-se</a>
            </div>
            <div class="col-lg-8">
                <!-- Carousel -->
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0"
                            class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                            aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                            aria-label="Slide 3"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="../public/images/DUAL-logo1.png" class="img-fluid d-block w-100 rounded" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="../public/images/cultura_britanica_gr.png" class="img-fluid d-block w-100 rounded rounded-3"
                                alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="../public/images/ft_210729_patente_nectar_sucos_probioticos_labioec_gr.png"
                                class="img-fluid d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
                <!-- Carousel -->
            </div>
        </div>
        <%- include('../views/partials/footer.ejs'); %>
    </div>
    
